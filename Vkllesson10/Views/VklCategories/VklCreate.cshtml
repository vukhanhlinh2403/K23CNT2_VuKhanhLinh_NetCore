@model Vkllesson10.Models.VklCategory

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="VklCreate">
            <div class="card">
                <div class="card-header">
                    <h1>@ViewData["Title"]</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="CateName" class="control-label"></label>
                        <input asp-for="CateName" class="form-control" />
                        <span asp-validation-for="CateName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CateStatus" class="control-label"></label>
                        <input asp-for="CateStatus" class="form-control" />
                        <span asp-validation-for="CateStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Ghi lại" class="btn btn-primary" name="btnVklCreate" />

                        <a asp-action="VklIndex">Back to List</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}