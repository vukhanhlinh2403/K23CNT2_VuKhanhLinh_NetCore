@model Vkllesson10.Models.VklCategory

@{
    ViewData["Title"] = "sua thong tin";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="VklEdit">
            <div class="card">
                <div class="card-header">
                    <h1>@ViewData["Title"]</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="CateId" class="control-label"></label>
                        <input asp-for="CateId" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="CateName" class="control-label"></label>
                        <input asp-for="CateName" class="form-control" />
                        <span asp-validation-for="CateName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CateStatus" class="control-label"></label>
                        <input asp-for="CateStatus" class="form-control" />
                        <span asp-validation-for="CateStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Ghi lại" class="btn btn-primary" name="btnVklUpdate" />

                        <a asp-action="VklIndex" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
