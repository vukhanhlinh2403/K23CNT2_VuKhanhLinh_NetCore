@model Vkllesson06.Models.VklEmployee

@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<div class="container mt-4">
    <h2>Chỉnh sửa thông tin nhân viên</h2>
    <form asp-action="VklEditPUT" method="post">

        <input type="hidden" asp-for="VklId" />

        <div class="input-group mb-3">
            <span class="input-group-text"><i class="bi bi-person"></i></span>
            <input asp-for="VklName" class="form-control" placeholder="Họ tên" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
            <input asp-for="VklBirthDay" type="date" class="form-control" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">
                <i class="bi bi-envelope"></i>
            </span>
            <input asp-for="VklEmail" class="form-control" placeholder="Email" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
            <input asp-for="VklPhone" class="form-control" placeholder="Số điện thoại" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text"><i class="bi bi-cash"></i></span>
            <input asp-for="VklSalary" class="form-control" placeholder="Lương" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Trạng thái</span>
            <select asp-for="VklStatus" class="form-select">
                <option value="true">Đang làm</option>
                <option value="false">Đã nghỉ</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary me-2">
            <i class="bi bi-check-circle"></i> Lưu
        </button>
        <a asp-action="VklIndex" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Hủy
        </a>
    </form>
</div>
