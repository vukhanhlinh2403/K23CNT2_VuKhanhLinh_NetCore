@model IEnumerable<Vkllesson04.Models.Book>
@{
    ViewData["Title"] = "VklIndex";
}

<h1>Danh sách cuốn sách</h1>

<form asp-action="Index" method="POST" class="form-inline" role="form">
    <div class="form-group">
        <select name="AuthorId" class="form-control" asp-items="@ViewBag.athors">
            <option value="">Chọn tác giả</option>
        </select>
        <select name="GenereId" class="form-control" asp-items="@ViewBag.generes">
            <option value="">Chọn thể loại</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    <a asp-action="Create" class="btn btn-success">Thêm mới</a>
    <hr />
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Thể loại</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.GenreID</td>
                <td>@book.price</td>
                <td>
                    <img src="@book.Image" alt="@book.Title" width="40" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
